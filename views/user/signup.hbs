<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Create New Account</h2>
            <form action="/signup" method="post">
            
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter your Name here" >
                </div>
                <div class="form-group">
                    <label for="">Email or Phone Number</label>
                    <input type="email" class="form-control" name="Email" placeholder="Email Or Phone..." >
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Password..." >
                </div>
                <a href="/login" >Already have an Account?</a>
                <button type="submit" class="btn btn-primary float-end mt-3">Signup</button>

            </form>
        </div>
    </div>
</div>
