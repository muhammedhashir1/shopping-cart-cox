<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product">
                <button class="btn btn-success float-end mt-3 mb-2">Add Product</button>
            </a>
        </div>
        <table class="table mt-3" id="productsTable">
  <thead>
    <tr>
      {{!-- <th scope="col">No</th> --}}
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      {{!-- <th scope="row">1</th> --}}
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.jpg" alt="img err"></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" > <button class="btn btn-primary">Edit</button> </a>
        <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure you want to delete this {{this.Name}}?')"> <button class="btn btn-danger" >Delete</button></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>
<style>
   body{
        background: #98a891
    }

    th{
      color: white;
    }
    tr{
        color: rgb(0, 0, 0);
    }
</style>